# Project Enigma Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENIGMA_ENVIRONMENT=development
ENIGMA_DEBUG=true
ENIGMA_HOST=0.0.0.0
ENIGMA_PORT=8000
ENIGMA_SECRET_KEY=your-secret-key-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Set to true to use mock APIs instead of real integrations
ENIGMA_USE_MOCK_APIS=true
ENIGMA_ENABLE_WORKFLOW_PERSISTENCE=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
ENIGMA_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# =============================================================================
# JIRA INTEGRATION
# =============================================================================
ENIGMA_JIRA_BASE_URL=https://your-company.atlassian.net
ENIGMA_JIRA_USERNAME=your-jira-username
ENIGMA_JIRA_TOKEN=your-jira-api-token

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
ENIGMA_GITHUB_TOKEN=your-github-personal-access-token
ENIGMA_GITHUB_ORGANIZATION=your-github-organization

# =============================================================================
# CONFLUENCE INTEGRATION
# =============================================================================
ENIGMA_CONFLUENCE_BASE_URL=https://your-company.atlassian.net/wiki
ENIGMA_CONFLUENCE_USERNAME=your-confluence-username
ENIGMA_CONFLUENCE_TOKEN=your-confluence-api-token

# =============================================================================
# FILE SYSTEM CONFIGURATION
# =============================================================================
ENIGMA_CONFIG_DIRECTORY=config
ENIGMA_REPOSITORIES_CONFIG_FILE=repositories.json
ENIGMA_CHAT_HISTORY_DIRECTORY=data/chat_history